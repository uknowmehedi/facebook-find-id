{
  "manifest_version": 3,
  "name": "Facebook ID Finder",
  "version": "2.0",
  "description": "Find Facebook IDs from phone numbers with automated testing",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://docs.google.com/document/d/1bxQ30msTFpJ3gocuycbFfUnKhtGrTKTYgf2fXfDz0YY/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Find FB IDs"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  }
}
